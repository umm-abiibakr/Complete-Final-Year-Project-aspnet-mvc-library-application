@model PrivateLibrary.Data.ViewModels.LoanVM

<h2>Confirm Borrowing</h2>

@if (Model.LoanCartItems != null && Model.LoanCartItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Quantity</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LoanCartItems)
            {
                <tr>
                    <td>@item.BookTitle</td>
                    <td>@item.Quantity</td>
                    <td>@item.DueDate.ToString("d")</td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="Create">
        <input type="submit" value="Confirm Borrow" asp-route="Return" class="btn btn-primary" />
        <a asp-action="LoanCart" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p>The loan cart is empty.</p>
}