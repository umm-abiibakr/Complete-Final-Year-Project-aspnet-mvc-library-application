@model PrivateLibrary.Models.Book

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Language</dt>
        <dd class="col-sm-10">@Model.Language</dd>
        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.BookCategory</dd>
        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Publisher?.Name</dd>
        <dt class="col-sm-2">Authors</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Books_Authors.Select(ba => ba.Author.FullName))</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </form>
</div>