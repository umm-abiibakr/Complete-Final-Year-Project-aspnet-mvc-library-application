@model Book

@{
    ViewData["Title"] = "Books Details";
}

<div class="row">
    {
    <div class="col-md-8 offset-2">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="book-title">
                                @Model.Title
                            </h5>
                        </p>

                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Publisher: </b>
                            <a asp-controller="Publishers" asp-action="Details" asp-route-id="@Model.PublisherId">
                                @Model.Publisher.Name
                            </a>
                        </p>
                        <p class="card-text"><b>Category: </b>@Model.BookCategory</p>
                        <p class="card-text">
                            <b>Status: </b>
                            @if (Model.Status)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">BORROWED</span>
                            }

                        </p>
                        <p class="card-text">
                            <b>Authors: </b>
                            <hr />
                            <div>
                                @foreach (var item in Model.Books_Authors)
                                {
                                    <div class="column text-center">
                                        <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.Author.AuthorId">
                                            @item.Author.FullName
                                        </a>
                                    </div>
                                }
                            </div>
                        </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Index">
                                    Back to List
                                </a>
                                <a class="btn btn-success text-white">
                                    <i class="bi borrow-plus"></i> Borrow
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
