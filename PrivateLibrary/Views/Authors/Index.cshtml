@model IEnumerable<Author>
@{
    ViewData["Title"] = "List of Authors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <!-- Fixed extra '8' -->

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-authorId="@item.AuthorId">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a> |
                            <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-authorId="@item.AuthorId">
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>|
                            <a class="btn btn-danger" asp-action="Delete" asp-route-authorId="@item.AuthorId">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Authors")
